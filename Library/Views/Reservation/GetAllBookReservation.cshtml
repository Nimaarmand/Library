@model IEnumerable<Application.Dtos.Books.BookDto>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
</head>


<body>
    <div class="container mt-3">
        <h2 class="text-center">کتاب های رزرو شده</h2>
        <div class="mb-3" dir="rtl">
            <div class="input-group">
                <input type="text" class="form-control" id="searchInput" placeholder="جستجو کنید..." aria-label="جستجو" aria-describedby="searchIcon">
                <span class="input-group-text" id="searchIcon"><i class="fas fa-search"></i></span>
            </div>
        </div>
        <table class="table table-striped" dir="rtl" id="dataTable">
            <thead>
                <tr>
                    <th hidden>  id</th>
                    <th>نام کتاب</th>
                    <th>موضوع</th>
                    <th>نویسنده</th>                  
                    <th>ناشر</th>
                    <th>زبان</th>
                    <th>تاریخ انتشار</th>
                     <th hidden> وضعیت کتاب</th>
                     <th hidden> بارکد </th>
                     <th hidden>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td hidden>@item.Id</td hidden>                      
                        <td>@item.Name</td>
                        <td>@item.Subject</td>
                        <td>@item.Author</td>
                        <td>@item.Publisher</td>
                        <td>@item.Language</td>
                        <td>@item.PublicationDate</td>
                        <td hidden>@item.IsAvailable</td>
                        <td hidden>@item.ISBN</td>
                        <td hidden>

                            <div class="dropdown" hidden>
                                <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    عملیات
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">


                                  
                                      <li>
                                                <a href="#" class="dropdown-item btn-add-sub" data-id="@item.Id">
                                                           <i class="fas fa-plus"></i> رزرو کتاب
                                                </a>
                                      </li>



                                    <li>
                                       <a class="dropdown-item btn-show-sub" href="#" data-id="@item.Id">
                                            <i class="fas fa-eye"></i> نمایش زیر مجموعه
                                       </a>
                                    </li> 

                                    <li>
                                                <a class="dropdown-item btn-edit" href="#" data-id="@item.Id">
                                                      <i class="fas fa-edit"></i> ویرایش
                                                </a>
                                    </li>



                                    <li>  <a class="dropdown-item text-danger delete-category" data-id="@item.Id" href="#"> <i class="fas fa-trash"></i> حذف </a> </li>


                                </ul>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>


    <script>
        document.getElementById('searchInput').addEventListener('keyup', function () {
            var input = document.getElementById('searchInput').value.toLowerCase();
            var rows = document.getElementById('dataTable').getElementsByTagName('tr');

            for (var i = 1; i < rows.length; i++) { // Start at 1 to skip header row
                var cells = rows[i].getElementsByTagName('td');
                var found = false;

                for (var j = 0; j < cells.length; j++) {
                    if (cells[j].innerText.toLowerCase().includes(input)) {
                        found = true;
                        break;
                    }
                }

                rows[i].style.display = found ? '' : 'none';
            }
        });

        $(document).ready(function () {
            // Delete 
            $(".delete-category").click(function (e) {
                e.preventDefault();

                var categoryId = $(this).data("id");

                Swal.fire({
                    title: 'آیا مطمئن هستید؟',
                    text: "این عمل غیرقابل بازگشت است!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'بله، حذف کن',
                    cancelButtonText: 'خیر'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "POST",
                            url: "/Books/Delete",
                            data: { id: categoryId },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire(
                                        'حذف شد!',
                                        response.message,
                                        'success'
                                    ).then(() => {
                                        location.reload(); // Refresh the page or just remove row
                                    });
                                } else {
                                    Swal.fire(
                                        'خطا!',
                                        response.message,
                                        'error'
                                    );
                                }
                            },
                            error: function () {
                                Swal.fire(
                                    'خطا!',
                                    'در حذف اطلاعات خطایی رخ داده است.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });
        });

        
     
         $(document).ready(function () {
         $(".btn-show-sub").click(function (e) {
             e.preventDefault(); 

                   var parentId = $(this).data("id"); 
                 if (parentId) {
                              window.location.href = "/Category/listSubCategory?parentId=" + parentId; 
                 } else {
                       Swal.fire({
                         icon: "error",
                         title: "خطا!",
                         text: "شناسه والد نامعتبر است."
                       });
                 }
         });
         });

        $(document).ready(function () {
       $(".btn-edit").click(function (e) {
        e.preventDefault();

        var bookId = $(this).data("id"); // اطمینان از اینکه ID درست دریافت می‌شود
        if (bookId) {
            window.location.href = "/Book/Edit/" + bookId;

        } else {
            Swal.fire({
                icon: "error",
                title: "خطا!",
                text: "شناسه کتاب نامعتبر است."
            });
        }
    });
});

    </script>

</body>

</html>

