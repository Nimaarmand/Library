@model Application.Dtos.Books.BookDto

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Create Book</title>

    <!-- بوت‌استرپ CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">

    <!-- Kendo UI CSS -->
    <link href="https://kendo.cdn.telerik.com/2024.1.324/styles/kendo.default-v2.min.css" rel="stylesheet" />

    <!-- جاوااسکریپت -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>

    <!-- Kendo UI JavaScript -->
    <script src="https://kendo.cdn.telerik.com/2024.1.324/js/kendo.all.min.js"></script>

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body dir="rtl">
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="Create" id="myForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6" hidden>
                            <label asp-for="Id" class="form-label"></label>
                            <input asp-for="Id" id="Id" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label">نام کتاب</label>
                            <input asp-for="Name" id="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Author" class="form-label">نویسنده</label>
                            <input asp-for="Author" id="Author" class="form-control" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Subject" class="form-label">موضوع</label>
                            <input asp-for="Subject" id="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="ISBN" class="form-label">بارکد</label>
                            <input asp-for="ISBN" id="ISBN" class="form-control" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Pages" class="form-label">تعداد صفحات</label>
                            <input asp-for="Pages" id="Pages" class="form-control" />
                            <span asp-validation-for="Pages" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Publisher" class="form-label">ناشر</label>
                            <input asp-for="Publisher" id="Publisher" class="form-control" />
                            <span asp-validation-for="Publisher" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Language" class="form-label">زبان</label>
                            <input asp-for="Language" id="Language" class="form-control" />
                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PublicationDate" id="myDatePicker" class="form-label">تاریخ انتشار</label>
                            <input asp-for="PublicationDate" id="PublicationDate" class="form-control" />
                            <span asp-validation-for="PublicationDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="BookCategoriesId" class="form-label">دسته‌بندی</label>
                            <select asp-for="BookCategoriesId" class="form-select mt-4 mb-3" asp-items="ViewBag.Categories">
                                <option value="">انتخاب دسته‌بندی</option>
                            </select>
                            <span asp-validation-for="BookCategoriesId" class="text-danger"></span>
                        </div>


                        <div class="col-md-6" hidden>
                            <label asp-for="BookCategoriesId" class="form-label"></label>
                            <input asp-for="BookCategoriesId" id="BookCategoriesId" class="form-control" />
                            <span asp-validation-for="BookCategoriesId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid mt-3">
                        <button type="button" id="submitBtn" class="btn btn-primary">ثبت اطلاعات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script>
        $("#submitBtn").click(function () {
            
            var formData = new FormData($("#myForm")[0]);

            $.ajax({
                type: "POST",
                url: "/Book/Create",  
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                   
                    if (response.success) {
                        alert(response.message); 
                        window.location.href = "/Book/Booklist"; 
                    } else {
                        alert("خطا در ثبت اطلاعات: " + response.message);  
                    }
                },
                error: function (xhr, status, error) {
                  
                    console.error("❌ خطا در ارسال اطلاعات:", error);
                }
            });
        });
    </script>


</body>

</html>


