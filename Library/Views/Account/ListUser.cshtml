@using Domain.Entities.Users
@model List<ApplicationUser>

@{
    ViewData["Title"] = "لیست کاربران";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

</head>
<body>
    <div class="container mt-3">
        <h2 class="text-center">لیست کاربران</h2>
        <div class="mb-3" dir="rtl">
            <div class="input-group">
                <input type="text" class="form-control" id="searchInput" placeholder="جستجو کنید..." aria-label="جستجو" aria-describedby="searchIcon">
                <span class="input-group-text" id="searchIcon"><i class="fas fa-search"></i></span>
            </div>
        </div>
        <table class="table table-striped" dir="rtl" id="dataTable">
            <thead>
                <tr>
                    <th hidden>  id</th>
                    <th>نام کاربری</th>
                    <th>شماره تلفن</th>
                    <th>وضعیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td hidden>@item.Id</td hidden>
                        <td>@item.UserName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.IsActive</td>
                        <td>

                            <div class="dropdown">
                                <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    عملیات
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">


                                  
                                      <li>
                                                <a href="#" class="dropdown-item btn-add-sub" data-id="@item.Id">
                                                           <i class="fas fa-plus"></i> ثبت زیر مجموعه
                                                </a>
                                      </li>



                                    <li>
                                       <a class="dropdown-item btn-show-sub" href="#" data-id="@item.Id">
                                            <i class="fas fa-eye"></i> نمایش زیر مجموعه
                                       </a>
                                    </li> 

                                    <li>
                                                <a class="dropdown-item btn-edit" href="#" data-id="@item.PhoneNumber">
                                                      <i class="fas fa-edit"></i> ویرایش
                                                </a>
                                    </li>



                                   @*  <li>  <a class="dropdown-item text-danger delete-category" data-id="@item.Id" href="#"> <i class="fas fa-trash"></i> حذف </a> </li> *@


                                </ul>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>


    <script>
        document.getElementById('searchInput').addEventListener('keyup', function () {
            var input = document.getElementById('searchInput').value.toLowerCase();
            var rows = document.getElementById('dataTable').getElementsByTagName('tr');

            for (var i = 1; i < rows.length; i++) { // Start at 1 to skip header row
                var cells = rows[i].getElementsByTagName('td');
                var found = false;

                for (var j = 0; j < cells.length; j++) {
                    if (cells[j].innerText.toLowerCase().includes(input)) {
                        found = true;
                        break;
                    }
                }

                rows[i].style.display = found ? '' : 'none';
            }
        });

        $(document).ready(function () {
            
            $(".delete-category").click(function (e) {
                e.preventDefault();

                var categoryId = $(this).data("id");

                Swal.fire({
                    title: 'آیا مطمئن هستید؟',
                    text: "این عمل غیرقابل بازگشت است!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'بله، حذف کن',
                    cancelButtonText: 'خیر'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "POST",
                            url: "/Account/Delete",
                            data: { id: categoryId },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire(
                                        'حذف شد!',
                                        response.message,
                                        'success'
                                    ).then(() => {
                                        location.reload(); // Refresh the page or just remove row
                                    });
                                } else {
                                    Swal.fire(
                                        'خطا!',
                                        response.message,
                                        'error'
                                    );
                                }
                            },
                            error: function () {
                                Swal.fire(
                                    'خطا!',
                                    'در حذف اطلاعات خطایی رخ داده است.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });
        });

           $(document).ready(function () {
         $(".btn-add-sub").click(function (e) {
                      e.preventDefault();

                   var parentId = $(this).data("id"); 
                          if (parentId && parentId != 0) {
                      window.location.href = "/Category/AddSubCategory?parentid=" + parentId; 
                } else {
                       alert("ID معتبر نیست!");
                }
         });
         });
     
         $(document).ready(function () {
         $(".btn-show-sub").click(function (e) {
             e.preventDefault(); 

                   var parentId = $(this).data("id"); 
                 if (parentId) {
                              window.location.href = "/Category/listSubCategory?parentId=" + parentId; 
                 } else {
                       Swal.fire({
                         icon: "error",
                         title: "خطا!",
                         text: "شناسه والد نامعتبر است."
                       });
                 }
         });
         });

        $(document).ready(function () {
    $(".btn-edit").click(function (e) {
        e.preventDefault();

        var phoneNumber = $(this).data("id");

        if (phoneNumber) {
            // اصلاح مسیر برای کنترلر Account و پارامتر phoneNumber
            window.location.href = "/Account/Edit?phoneNumber=" + phoneNumber;
        } else {
            Swal.fire({
                icon: "error",
                title: "خطا!",
                text: "شماره تلفن نامعتبر است."
            });
        }
    });
});

    </script>

</body>

</html>

